{
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "semi": ["error", "never"],
    "eol-last": ["error", "always"],
    "indent": [2, 2],
    "no-trailing-spaces": "error",
    "quotes": ["error", "single"]
  }
}